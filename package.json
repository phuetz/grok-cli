{
  "name": "@phuetz/code-buddy",
  "version": "2.0.0",
  "description": "An open-source AI coding agent that brings AI power directly into your terminal.",
  "author": "Patrice Huetz <ton-email@example.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phuetz/code-buddy.git"
  },
  "bugs": {
    "url": "https://github.com/phuetz/code-buddy/issues"
  },
  "homepage": "https://github.com/phuetz/code-buddy#readme",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "buddy": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bun": "bun run tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist coverage .nyc_output *.tsbuildinfo",
    "dev": "bun run src/index.ts",
    "dev:node": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:bun": "bun run dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "validate": "npm run lint && npm run typecheck && npm test",
    "install:bun": "bun install",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "bench": "npm run bench:startup && npm run bench:tools",
    "bench:startup": "npx tsx benchmarks/startup.bench.ts",
    "bench:tools": "npx tsx benchmarks/tools.bench.ts",
    "perf": "PERF_TIMING=true npm start -- --help",
    "perf:verbose": "PERF_TIMING=true VERBOSE=true npm start -- --help"
  },
  "keywords": [
    "cli",
    "agent",
    "text-editor",
    "code-buddy",
    "ai",
    "coding-assistant",
    "terminal",
    "developer-tools",
    "mcp",
    "hooks",
    "grok",
    "openai",
    "claude",
    "xai",
    "automation",
    "code-generation",
    "agentic",
    "llm",
    "rag",
    "semantic-search",
    "ai-agent",
    "terminal-ui",
    "multi-provider",
    "gemini",
    "ollama",
    "local-llm"
  ],
  "license": "MIT",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@resvg/resvg-js": "^2.6.2",
    "axios": "^1.13.2",
    "better-sqlite3": "^11.10.0",
    "chalk": "^5.6.2",
    "cli-highlight": "^2.1.11",
    "commander": "^12.1.0",
    "diff-match-patch": "^1.0.5",
    "dotenv": "^16.6.1",
    "fast-glob": "^3.3.3",
    "form-data": "^4.0.5",
    "fs-extra": "^11.3.2",
    "glob": "^10.4.5",
    "ignore": "^5.3.2",
    "ink": "^4.4.1",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "openai": "^5.23.2",
    "react": "^18.3.1",
    "semver": "^7.7.3",
    "terminal-image": "^4.1.0",
    "tiktoken": "^1.0.22",
    "usearch": "^2.21.4",
    "zod": "^3.25.0"
  },
  "optionalDependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@google/generative-ai": "^0.21.0",
    "@mlc-ai/web-llm": "^0.2.80",
    "@vscode/ripgrep": "^1.17.0",
    "@xenova/transformers": "^2.17.2",
    "d3": "^7.9.0",
    "d3-node": "^4.0.1",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "node-llama-cpp": "^3.14.5",
    "node-pty": "^1.0.0",
    "string-width": "^7.2.0",
    "tar": "^7.5.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/diff-match-patch": "^1.0.36",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.26",
    "@types/react": "^18.3.27",
    "@types/semver": "^7.7.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "hono": "^4.11.4",
    "jimp": "1.6.0",
    "phin": "^3.7.1",
    "qs": "^6.13.0"
  },
  "preferGlobal": true
}
